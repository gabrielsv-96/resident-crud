<div class="container mt-4">
  <div class="row align-items-start">
    <div class="col">
      <div class="card">
        <div class="card-body">

          <div class="row">
            <div class="col">
              <%= link_to "Novo municipe", new_resident_path, class: "btn btn-primary" %>

              <div class="btn-group" role="group">
                <%= link_to "Todos", residents_path, :method => :get, class: "btn btn-primary" %>
                <%= link_to "Ativos", residents_path(:active => true), :method => :get, class: "btn btn-primary" %>
                <%= link_to "Inativos", residents_path(:active => false), :method => :get, class: "btn btn-primary" %>
              </div>
            </div>

            <div class="col">
              <%= form_tag(residents_path, method: :get, class: "row g-3") do %>
                <div class="col">
                  <%= text_field_tag(:search_term, params[:search_term], class: "form-control", placeholder: "Buscar residente") %>
                </div>
                <div class="col-auto">
                  <%= submit_tag("Buscar", class: "btn btn-primary mb-3") %>
                </div>
              <% end %>  
              
            </div>
          </div>

          <table class="table table-striped mt-2">
            <thead class="table-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nome completo</th>
                <th scope="col">Telefone</th>
                <th scope="col">Bairro</th>
                <th scope="col">Cidade</th>
                <th scope="col">UF</th>
                <th scope="col">Status</th>
                <th scope="col">Opções</th>
              </tr>
            </thead>
            <tbody>
              <% @residents.each do |resident| %>
              <% address = resident.address %>
              <tr>
                <td scope="row"><%= resident.id %></td>
                <td><%= resident.full_name %></td>
                <td><%= resident.phone %></td>
                <td><%= address.district %></td>
                <td><%= address.city %></td>
                <td><%= address.state_code %></td>
                <td>
                  <% if resident.active == true %>
                    <span class="badge text-bg-success">Ativo</span>
                  <% else %>
                    <span class="badge text-bg-danger">Inativo</span>
                  <% end %>
                </td>
                <td>
                  <%= link_to "Editar", edit_resident_path(resident.id), class: "btn btn-warning" %>
                  <%= link_to "Visualizar", resident_path(resident.id), class: "btn btn-info" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @residents, theme: 'bootstrap-5' %>
        </div>
      </div>
    </div>
  </div>
</div>
